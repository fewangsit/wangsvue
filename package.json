{
  "name": "wangsvue-monorepo",
  "version": "1.0.1",
  "author": "Wangsit FE Developer",
  "description": "Wangsit Front End Developer Monorepo",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vue-tsc && vite build",
    "build:dev": "vue-tsc && vite build --watch",
    "build:lib": "pnpm --filter wangsvue build",
    "release": "pnpm --filter wangsvue release",
    "release:patch": "pnpm --filter wangsvue release:patch",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.ts --fix --ignore-path .gitignore",
    "tailwind": "tailwind -i ./src/assets/css/main.css -o ./cypress/support/tailwind.css",
    "cy:run-ct": "pnpm tailwind && cypress run --component",
    "cy:open-ct": "pnpm tailwind && cypress open --component",
    "cy:run-e2e": "pnpm tailwind && cypress run",
    "cy:open-e2e": "pnpm tailwind && cypress open",
    "cy:test-all": "pnpm tailwind && start-server-and-test dev cy:run-e2e && pnpm cy:run-ct"
  },
  "dependencies": {
    "@types/lodash": "4.17.7",
    "@vueuse/core": "10.11.1",
    "axios": "1.7.3",
    "base64toblob": "0.0.2",
    "debounce": "2.1.0",
    "idb": "8.0.0",
    "lodash": "4.17.21",
    "lottie-web-vue": "^2.0.7",
    "moment-timezone": "^0.5.45",
    "primevue": "^3.53.0",
    "qrcode": "1.5.4",
    "quill": "^2.0.2",
    "sharp": "^0.33.5",
    "single-spa": "6.0.1",
    "vee-validate": "4.13.2",
    "vue": "3.4.37",
    "vue-advanced-cropper": "2.8.9",
    "vue-i18n": "9.13.1",
    "vue-router": "^4.4.3",
    "vuex": "4.1.0",
    "xlsx": "0.18.5"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.12.44",
    "@cypress/vue": "6.0.1",
    "@faker-js/faker": "8.4.1",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@tsconfig/node18": "18.2.4",
    "@types/mocha": "10.0.7",
    "@types/node": "22.2.0",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "8.0.1",
    "@typescript-eslint/parser": "8.0.1",
    "@vitejs/plugin-vue": "5.1.2",
    "@vue/eslint-config-typescript": "13.0.0",
    "@vue/tsconfig": "0.5.1",
    "autoprefixer": "10.4.20",
    "changelogen": "^0.5.5",
    "concurrently": "8.2.2",
    "cypress": "13.13.2",
    "cypress-real-events": "1.13.0",
    "eslint": "8.57.0",
    "eslint-config-ts-code-standard": "1.0.9",
    "eslint-plugin-css": "0.9.2",
    "eslint-plugin-cypress": "3.4.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-promise": "6.6.0",
    "eslint-plugin-vue": "9.19.2",
    "faker-js": "1.0.0",
    "highlight.js": "11.10.0",
    "istanbul-lib-coverage": "3.2.2",
    "nyc": "17.0.0",
    "postcss": "8.4.41",
    "postcss-nested": "6.2.0",
    "prettier": "3.3.3",
    "rimraf": "5.0.10",
