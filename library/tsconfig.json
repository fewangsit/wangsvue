{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "module": "ESNext",
    "target": "ESNext",
    "declarationDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": [
        "./*"
      ],
    },
    "lib": [
      "ESNext",
      "DOM"
    ],
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.json",
    "**/preset/**/*.js",
    "**/*.vue",
  ],
  "exclude": [
    "**/*.config.ts",
  ],
}